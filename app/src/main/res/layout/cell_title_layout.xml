<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:background="#ECE8EF"
android:baselineAligned="false" android:layout_height="250dp"
android:orientation="horizontal">
<!--<android.support.v7.widget.CardView-->
<!--android:layout_width="wrap_content"-->
<!--android:layout_height="match_parent"-->
<!--android:id="@+id/cv"-->
<!--&gt;-->
<!-- LEFT TITLE PART -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="0.3"
    android:layout_height="match_parent"
    android:background="@drawable/background_borderr"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/title_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:text="Sender"
        />


    <View
        android:layout_marginTop="10dp"
        android:background="#3498DB"
        android:id="@+id/hor_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/title_price"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/tv_sender_name1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_below="@id/hor_line"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:text="Ahmad Irfan"
        />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_sender_phone1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_below="@id/tv_sender_name1"
        android:text="03124477168"
        android:textColor="@android:color/black"
        android:textSize="12sp" />


</LinearLayout>
<!-- RIGHT TITLE PART -->
<LinearLayout
    android:weightSum="6"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:background="@drawable/background_borderr"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:orientation="horizontal"
        android:weightSum="8.9"
        >
        <TextView
            android:id="@+id/tv_receiver1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:text="Receiver"
            />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_weight="3.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_receiver_name1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="Ali Sahrn"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                />
            <View
                android:layout_height="match_parent"
                android:layout_width="2dp"
                android:background="#3498DB"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

            </View>
            <TextView
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:id="@+id/tv_receiver_phone1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="03214122464"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="8.9"
            >
            <TextView
                android:id="@+id/tv_origin1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:text="Lahore"
                android:textColor="@android:color/black"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_ocean_air1"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flight"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_destination1"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:text="Karachi"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<!--</android.support.v7.widget.CardView>-->
</LinearLayout>